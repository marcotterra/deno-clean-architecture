{
  "lint": {
    "rules": {
      "exclude": ["require-await"]
    }
  },
  "fmt": {
    "options": {
      "singleQuote": true
    }
  },
  "compilerOptions": {
    "emitDecoratorMetadata": true
  },
  "importMap": "./import_map.json",
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-env ./run.ts",
    "dev": "deno run --watch --allow-net --allow-read --allow-env ./run.ts",
    "test": "deno test --allow-env --allow-net --allow-read -A --unstable spec"
  }
}
